<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.anylogic.ssystem.bms.com.mapper.ComUserinfoDetailMapper">

    <!-- 개인정보 상세 삭제 -->
    <delete id="deleteUserDetail" parameterType="com.anylogic.ssystem.bms.com.model.DeleteUserDetailReqVO">
        DELETE FROM sbms.sbms_user.com_userinfo_detail
        WHERE 1 = 1
            and userid = #{userid}
    </delete>

    <!-- 개인정보 상세 등록 -->
    <insert id="insertUserDetail" parameterType="com.anylogic.ssystem.bms.com.model.InsertUserDetailReqVO">
        INSERT INTO
        sbms.sbms_user.com_userinfo_detail (
        <trim suffixOverrides=",">
            <if test="userid != null and userid !=''">
                userid,
            </if>
            <if test="email != null and email !=''">
                email,
            </if>
            <if test="mobilephone != null and mobilephone !=''">
                mobilephone,
            </if>
            <if test="inid != null and inid !=''">
                inid,
            </if>
            <if test="indt != null and indt !=''">
                indt,
            </if>
        </trim>
        )
        VALUES(
        <trim suffixOverrides=",">
            <if test="userid != null and userid !=''">
                #{userid},
            </if>
            <if test="email != null and email !=''">
                #{email},
            </if>
            <if test="mobilephone != null and mobilephone !=''">
                #{mobilephone},
            </if>
            <if test="inid != null and inid !=''">
                #{inid},
            </if>
            <if test="indt != null and indt !=''">
                #{indt},
            </if>
        </trim>
        )
    </insert>

    <!-- 개인정보 상세 수정 -->
    <update id="updateUserDetail" parameterType="com.anylogic.ssystem.bms.com.model.UpdateUserDetailReqVO">
        UPDATE sbms.sbms_user.com_userinfo_detail
        <trim prefix="SET" suffixOverrides=",">
            <if test="email != null">
                email = #{email},
            </if>
            <if test="mobilephone != null">
                mobilephone = #{mobilephone},
            </if>
            <if test="upid != null and upid !=''">
                upid = #{upid},
            </if>
            <if test="updt != null and updt !=''">
                updt = #{updt},
            </if>
        </trim>
        WHERE 1 = 1
            and userid = #{userid}
    </update>


</mapper>

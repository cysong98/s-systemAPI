<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.anylogic.ssystem.bms.dct.mapper.BmsDctSummaryMapper">

    <resultMap id="getDctSummaryMap" type="com.anylogic.ssystem.bms.dct.model.GetDctSummaryResVO">
        <id column="docid" property="docid" />                        <!-- 비밀 ID -->
        <id column="docgubun" property="docgubun" />                  <!-- 비밀 구분 -->
        <result column="summary" property="summary" />                <!-- 요약 -->
    </resultMap>

    <!--  문서취지 조회 -->
    <select id="getDctSummary" parameterType="com.anylogic.ssystem.bms.dct.model.GetDctSummaryReqVO" resultMap="getDctSummaryMap">
        SELECT
            docid as "docid" 
            , docgubun as "docgubun" 
            , summary as "summary" 
        FROM  sbms.sbms_user.bms_dct_summary
        WHERE 1 = 1
            <if test="docid != null and docid !=''"> 
                and docid like CONCAT('%', #{docid}, '%') 
            </if>
    </select>

</mapper>
